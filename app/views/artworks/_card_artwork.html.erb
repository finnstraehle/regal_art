<div class="card-artwork">
  <div class="card-artwork-info">
    <h2><%= artwork.title %></h2>
    <p><%= artwork.description %></p>
  </div>
  <%= cl_image_tag artwork.photo.key, class: "card-artwork-photo" %>
  <div class="card-artwork-buttons">
    <%= link_to "Edit", edit_artwork_path(artwork), class: "button" %>
    <%= link_to "Delete", artwork_path(artwork), data: { turbo_method: :delete, turbo_confirm: "Are you sure that you want to delete this artwork?"}, class: "button" %>
  </div>
</div>

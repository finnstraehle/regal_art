<div data-controller="pop-up">
  <div data-action="click->pop-up#showPopup" >
    <div class="white-marker" style="position: absolute; left: calc(<%= art_detail.x_value %> * 100% / 14); bottom: calc(<%= art_detail.y_value %> * 100% / 14);"></div>
  </div>
  <div class="detail-popup" data-pop-up-target="box" style="position: absolute; left: calc(<%= art_detail.x_value %> * 100% / 14 + 30px); bottom: calc(<%= art_detail.y_value %> * 100% / 14 + 30px);">
    <div style="text-align: center;">
      <h4><%= art_detail.title %></h4>
      <p><%= art_detail.description %></p>
    </div>
    <span class="close" data-action="click->pop-up#closePopup">&times;</span>
  </div>
</div>

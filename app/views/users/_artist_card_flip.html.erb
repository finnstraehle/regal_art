<%= link_to user_path(artist), class: "artist-card flip" do %>
<%# style: "margin: auto 0 60px auto;"  %>
  <div class="text">
    <h2><%= artist.first_name %></h2>
    <p><%= artist.long_bio.truncate(300) %></p>
    <p><strong>Styles</strong>
      · <% artist.artworks.pluck(:style).uniq.each do |style| %>
        <%= style %> ·
      <% end %>
    </p>
  </div>
  <div class="artist-card-img">
    <%= cl_image_tag artist.avatar.key %>
  </div>
<% end %>

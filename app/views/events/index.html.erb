<div class="container-l">
  <div class="event-search-box">
    <div class="form-row">
      <%= form_with url: events_path, method: :get, class: "d-flex gap-2" do %>
          <%= text_field_tag :query,
                params[:query],
                class: "form-control",
                placeholder: "Type a keyword"
            %>
          <%= text_field_tag :location,
              params[:location],
              class: "form-control",
              placeholder: "Location",
              required: false
          %>
          <%= date_field_tag :start_date,
              params[:start_date],
              class: "form-control",
              placeholder: "Date",
              required: false
          %>
        <%= submit_tag "Search", name: "", class: "warm-gray-btn" %>
      <% end %>
    </div>
  </div>
  <div class="events-box ">
    <% @events.each_with_index do |event, index| %>
        <% if index % 3 == 0 %><%= render "events/event_card", event: event %>
        <% else %><%= render "events/event_card_sm", event: event %><% end %>
    <% end %>
  </div>
</div>

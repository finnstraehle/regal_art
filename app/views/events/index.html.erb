<div class="container-l">
  <div class="form-row">
    <%= form_with url: events_path, method: :get, class: "d-flex gap-2" do %>
        <%= text_field_tag :query,
              params[:query],
              class: "form-control",
              placeholder: "Type a keyword"
          %>
        <%= text_field_tag :location,
            params[:location],
            class: "form-control",
            placeholder: "Location",
            required: false
        %>
        <%= date_field_tag :start_date,
            params[:start_date],
            class: "form-control",
            placeholder: "Date",
            required: false
        %>
      <%= submit_tag "Search", name: "", class: "button" %>
    <% end %>
  </div>

  <div class="events-box">
    <% @events.each_with_index do |event, index| %>
      <% if index.odd? %>
       <div class="event-card">
          <%= cl_image_tag event.photos.first.key %>
          <div class="text">
            <h4><%= event.title %></h4>
            <div class="my-artist-name">
              <p>By</p>
              <p><%= event.user.first_name %></p>
              <p><%= event.user.last_name %></p>
          </div>
          <% date_str = Time.parse((event.start_date).to_s) %>
          <p class="event-date"><%= date_str.strftime("%A, %B %d, %Y") %></p>
        </div>
        <div class="event-btn"><%= link_to "Details", event_path(event), style: "text-decoration:none;"%></div>
      </div>
      <% else %>
        <div class="event-card-sm">
        <div class="text">
          <h4><%= event.title %></h4>
          <div class="my-artist-name">
            <p>By</p style="color: white">
            <p><%= event.user.first_name %></p>
            <p><%= event.user.last_name %></p>
          </div>
            <% date_str = Time.parse((event.start_date).to_s) %>
            <p class="event-date"><%= date_str.strftime("%A, %B %d, %Y") %></p>
        </div>
        <div class="event-btn"><%= link_to "Details", event_path(event), style: "text-decoration:none;"%></div>
      </div>
      <% end %>
    <% end %>
  </div>
</div>

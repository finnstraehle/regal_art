<% if banner.nil? %>
  <% img = image_url("user1_avatar.jpg") %>
<% end %>
<% if banner.class == String %>
  <% img = image_url(banner) %>
<% end %>
<% if banner.class == ActiveStorage::Attached::Many %>
  <% img = cl_image_path(banner.last.key) %>
<% end %>
<div class="navbar" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= img %>)">
  <div class="navbar-top">
    <div class="navbar-logo">
      <%= link_to artist_dashboard_path do %>
        <%= image_tag "logo_white.png" %>
      <% end %>
    </div>
    <div class="navbar-bar">
      <ul>
        <li class="nav-item">
            <%= link_to "Dashboard", artist_dashboard_path %>
          </li>
          <li class="nav-item">
            <%= link_to "Conversations", conversations_path %>
          </li>
          <li class="nav-item">
            <%= link_to "My Events", my_events_path %>
          </li>
          <li class="nav-item dropdown" data-controller="reveal" data-action="mouseout->reveal#hide">
            <%= link_to "#", "#", data: {action: "mouseover->reveal#display"} %>
            <div class="dropdown-m" data-reveal-target="item" >
              <%= link_to "My Events", "#" %><br>
              <%= link_to "Conversations", conversations_path %>
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "font-weight-bold" %>
            </div>
          </li>
      </ul>
    </div>
  </div>
  <div class="navbar-heading" style="">
    <h1><%= title %></h1>
  </div>
</div>

<div class="navbar" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= banner.nil? ? image_url("user1_avatar.jpg") : image_url(banner) %>)">
  <div class="navbar-top">
    <div class="navbar-logo">
      <%= link_to discover_path do %>
        <%= image_tag "logo_white.png" %>
      <% end %>
    </div>
    <div class="navbar-bar">
      <ul>
        <li class="nav-item">
            <%= link_to "Discover", discover_path %>
          </li>
          <li class="nav-item">
            <%= link_to "Artists", users_path %>
          </li>
          <li class="nav-item">
            <%= link_to "Events", events_path %>
          </li>
          <li class="nav-item dropdown" data-controller="reveal" data-action="mouseout->reveal#hide">
            <%= link_to @user, "#", data: {action: "mouseover->reveal#display"} %>
            <div class="dropdown-m" data-reveal-target="item" >
              <%= link_to "My Artists", subscriptions_path %><br>
              <%= link_to "My Events", "#" %><br>
              <%= link_to "Preferences", "#" %><br>
              <%= link_to "Conversations", conversations_path %>
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "font-weight-bold" %>
            </div>
          </li>
      </ul>
    </div>
  </div>
  <div class="navbar-heading">
    <h1><%= title %></h1>
  </div>
</div>

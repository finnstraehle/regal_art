<div class="background-gradient">
  <h2 class="regal-art-title">Regal Art.</h2>
  <div class="container-s container-devise">
    <h2>Log in</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs devise-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="devise-center">
        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "button-devise" %>
        </div>
      </div>
    <% end %>
    <div class="devise-center">
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: "forgot-pwd" %><br />
    </div>
  </div>
</div>

<div class="background-gradient devise-flex">
  <div class="navbar-logo margin-left">
    <%= image_tag "logo_white.png" %>
    <p>captivating narratives<br>that lie behind each <br>art piece</p>
  </div>
  <div class="container-s container-devise">
    <h2>Log in</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs devise-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="devise-center">
        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "button-devise" %>
        </div>
      </div>
    <% end %>
    <div class="devise-center">
      <%= link_to "Forgot your password?", new_password_path(resource_name) %>
      <p> or </p>
      <%= link_to "Sign up",  new_user_registration_path %>
    </div>
  </div>
</div>
